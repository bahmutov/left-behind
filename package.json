{
  "name": "left-behind",
  "description": "Fetches information how many dependent projects are behind your current release",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "mocha src/*-spec.js",
    "lint": "eslint bin/*.js index.js src/*.js",
    "issues": "git-issues",
    "commit": "git-issues && commit-wizard",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "example-lazy-ass": "node ./bin/left-behind.js lazy-ass",
    "example-check-more-types": "node ./bin/left-behind.js check-more-types"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/left-behind.git"
  },
  "files": [
    "bin",
    "src",
    "index.js"
  ],
  "preferGlobal": true,
  "keywords": [
    "npm",
    "version",
    "semver",
    "utility",
    "dependent",
    "dependencies"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/left-behind/issues"
  },
  "homepage": "https://github.com/bahmutov/left-behind#readme",
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "devDependencies": {
    "eslint": "1.10.1",
    "git-issues": "1.2.0",
    "mocha": "2.3.4",
    "pre-git": "1.4.0",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "bars": "github:jstrace/bars",
    "bluebird": "3.0.5",
    "chalk": "1.1.1",
    "check-more-types": "2.2.0",
    "get-package": "1.0.1",
    "hr": "0.1.3",
    "lazy-ass": "1.1.0",
    "lodash": "3.10.1",
    "semver": "5.1.0",
    "to-exact-semver": "1.0.0",
    "top-dependents": "1.1.0"
  }
}
